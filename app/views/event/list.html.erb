<h3>What Type of Events are you looking for?</h3>
<ul id = "types">
   <% Type.all.each do |c| %>
   <li><%= link_to c.name, :action => "show_types", :id => c.id %></li>
   <% end %>
</ul>
<% if @events.blank? %>
<p>There are no events currently in the system.</p>
<% else %>
<h3>These are the current events near you:</h3>

<ul id="events">
	<% @events.each do |c| %>
	<li><%= link_to c.title, {:action => 'show', :id => c.id} -%><br/>
		<b> <%= link_to 'Edit', {:action => "edit", :id => c.id} %></b>
		<b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
		:confirm => "Are you sure you want to delete this event?" %></b>
	</li>
	<% end %>
</ul>

<% end %>


<p><%= link_to "Add new Event", {:action => 'new' }%></p>
